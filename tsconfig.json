{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["es6"],
		"allowJs": true,
		"outDir": "dist",
		"rootDir": ".",
		"removeComments": true,
		"strict": true,
		"typeRoots": [
			"./node_modules/@types",
			"./src/@types"
		],
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
            "@data/*": ["./src/data/*"],
            "@domain/*": ["./src/domain/*"],
            "@infra/*": ["./src/infra/*"],
            "@main/*": ["./src/main/*"],
            "@presentation/*": ["./src/presentation/*"],
            "@validation/*": ["./src/validation/*"],
            "@test/*": ["./__test__/*"]
		}
	},
	"include": [
		"src/**/*",
        "__test__/**/*"
	]
}
